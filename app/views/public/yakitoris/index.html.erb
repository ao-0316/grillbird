<div class="container">
  <div class="row">
    <div class="col-md-10 my-3">
      <h1>焼き鳥一覧(全<%= @yakitoris.count %>件)</h1>
      <div class="main-content mt-4">
        <div class="row-cols-4 p-3">

          <% @yakitoris.each do |yakitori| %>

              <%= link_to public_yakitori_path(yakitori) do %>
                <%= image_tag yakitori.image, size: '250x200' %>
              <% end %>
              <p><%= link_to yakitori.name, public_yakitori_path(yakitori) %></p>
              
              <p><%= yakitori.genre.name %></p>

              <p><%= "#{yakitori.yakitori_comments.count} コメント" %></p>
            <td id="favorite_buttons_<%= yakitori.id %>">
              <%= render "public/favorites/favorites", yakitori: yakitori %>
            </td>  
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>