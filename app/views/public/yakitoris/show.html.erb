<% if @yakitori_comment.errors.any? %>
  <%= @yakitori_comment.errors.count %>件のエラーが発生しました
  <ul>
    <% @yakitori_comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= image_tag @yakitori.image, size: '300x300' %>
<h2><%= @yakitori.name %></h2>
<p><%= @yakitori.introduction %></p>
<p><%= @yakitori.genre.name %></p>

<div>
 <%= form_with model: [@yakitori, @yakitori_comment], url: public_yakitori_yakitori_comments_path(@yakitori), local: true do |f| %>

    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>


    <% if @yakitori.favorited_by?(current_customer) %>
    <p>
      <%= button_to public_yakitori_favorite_path(@yakitori), method: :delete do %>
        ♥<%= @yakitori.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= button_to public_yakitori_favorite_path(@yakitori), method: :post do %>
        ♡<%= @yakitori.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>

<div>
  <p>コメント件数：<%= @yakitori.yakitori_comments.count %></p>

  <% @yakitori.yakitori_comments.each do |yakitori_comment| %>

  <%= image_tag yakitori_comment.customer.profile_image ,:size => "200x200"%>
    <%= link_to public_path(yakitori_comment.customer) do %>
    <%= yakitori_comment.customer.full_name %>
    <% end %>
    <%= yakitori_comment.created_at.strftime('%Y/%m/%d') %><%= yakitori_comment.comment %>
    <% if yakitori_comment.customer == current_customer %>
      <%= link_to "削除", public_yakitori_yakitori_comment_path(yakitori_comment.customer), method: :delete %>
    <% end %>
  <% end %>
</div>
