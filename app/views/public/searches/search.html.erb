<table class="table table-hover table-inverse">
  
  
  
  <% if @range == "Customer" %>
  <h2>Customer search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    
    <thead>
      <tr>
        <th></th>
        <th>名前</th>
        <th>説明</th>
        <th>ジャンル</th>
      </tr>
    <tbody>
    <h2>Yakitoris search for "<%= @word %>"</h2>
    <% @yakitoris.each do |yakitori| %>
      <tr>
        <td><%= image_tag yakitori.image, size: '250x200' %></td>
        <td><%= link_to yakitori.name, public_yakitori_path(yakitori) %></td>
        <td><%= yakitori.introduction %></td>
        <td><%= yakitori.genre.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>