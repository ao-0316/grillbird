<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>品目一覧</h2>
      <h3><%= link_to "コメント一覧", admin_yakitori_comments_path %></h3>
    </div>
      <div class="col-sm-2 px-sm-0 text-right mt-3">
        <%= link_to new_admin_yakitori_path do %>
        <button type="button" class="btn btn-light rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
        <% end %>
      </div>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>品目ID</th>
          <th>品目</th>
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @yakitoris.each do |yakitori| %>
          <tr>
           <% if yakitori.image.attached? %>
                  <td><%= image_tag yakitori.image, size: '250x200' %></td>
                <% else %>
                  <td><%= image_tag 'no_image', size: "250x200" %></td>
                <% end %>
            <td><%= yakitori.id %></td>
            <td><%= link_to yakitori.name, admin_yakitori_path(yakitori.id) %></td>
            <td><%= yakitori.genre.name %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>