<div class="container">
  <div class="row">
    <div class="row my-3 offset-1 text-center">
      <h2><%= @customer.full_name %>さんの会員詳細 </h2>
    </div>
    <table class="table">
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス </td>
        <td>
          <% if @customer.is_active? %>
            <p class="">有効</p>
          <% else %>
            <p class="text-success">退会済</p>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= link_to "編集する", edit_admin_customer_path(@customer),class:"btn btn-success my-1 mx-4 px-4" %>
      </tr>
    </table>
  </div>
</div>